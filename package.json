{
  "name": "chatgpt-desktop-app",
  "version": "1.0.0",
  "description": "A desktop application built with Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.chatgpt",
    "productName": "ChatGPT",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "icons/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/mac/icon@2x.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "icons/icon.png"
    }
  },
  "author": "Taylor Ivanoff",
  "license": "MIT",
  "devDependencies": {
    "electron": "30.0.4",
    "electron-builder": "^22.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
