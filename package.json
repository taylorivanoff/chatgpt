{
  "name": "chatgpt",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "release": "electron-builder"
  },
  "keywords": [],
  "author": "Taylor Ivanoff",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^30.0.3",
    "electron-builder": "^24.13.3",
    "dotenv": "^16.4.5"
  },
  "build": {
    "appId": "com.taylorivanoff.chatgpt",
    "productName": "ChatGPT",
    "asar": true,
    "publish": {
      "provider": "github",
      "token": "${GITHUB_TOKEN}"
    },
    "mac": {
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png"
    },
    "extraMetadata": {
      "APP_NAME": "${env:APP_NAME}",
      "APP_URL": "${env:APP_URL}"
    }
  }
}
